{
  "swagger": "2.0",
  "info": {
    "title": "Task API",
    "description": "Task API Documentation",
    "version": "1.0.0"
  },
  "host": "pomodoro-focus-timer-api.onrender.com",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "paths": {
    "/tasks/": {
      "get": {
        "tags": [
          "Tasks"
        ],
        "description": "Get all tasks",
        "responses": {
          "200": {
            "description": "Tasks successfully obtained",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/TaskResponse"
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Server error",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Error message"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Tasks"
        ],
        "description": "Create a new task",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "Task information",
            "required": true,
            "schema": {
              "$ref": "#/definitions/TaskInput"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Task created successfully",
            "schema": {
              "$ref": "#/definitions/TaskResponse"
            }
          },
          "400": {
            "description": "Invalid input",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Error message"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      }
    },
    "/tasks/{id}": {
      "get": {
        "tags": [
          "Tasks"
        ],
        "description": "Get task by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Task ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Task found",
            "schema": {
              "$ref": "#/definitions/TaskResponse"
            }
          },
          "404": {
            "description": "Task not found",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Cannot find task"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "Tasks"
        ],
        "description": "Update a task",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Task ID"
          },
          {
            "name": "obj",
            "in": "body",
            "description": "Updated task information",
            "required": true,
            "schema": {
              "$ref": "#/definitions/TaskInput"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Task updated successfully",
            "schema": {
              "$ref": "#/definitions/TaskResponse"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Task not found",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Cannot find task"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Tasks"
        ],
        "description": "Delete a task",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Task ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Task deleted successfully",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Task deleted"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "404": {
            "description": "Task not found",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Cannot find task"
                }
              },
              "xml": {
                "name": "main"
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "TaskInput": {
      "type": "object",
      "properties": {
        "taskName": {
          "type": "string",
          "example": "Discounts"
        },
        "description": {
          "type": "string",
          "example": "Time spent on Discounts and Promotions"
        },
        "category": {
          "type": "string",
          "example": "Work"
        },
        "defaultDuration": {
          "type": "number",
          "example": 1500
        }
      }
    },
    "TaskResponse": {
      "type": "object",
      "properties": {
        "taskId": {
          "type": "string",
          "example": "67a575c2f7493400c45072a3"
        },
        "taskName": {
          "type": "string",
          "example": "Discounts"
        },
        "description": {
          "type": "string",
          "example": "Time spent on Discounts and Promotions"
        },
        "totalTimeSpent": {
          "type": "number",
          "example": 0
        },
        "category": {
          "type": "string",
          "example": "Work"
        },
        "isActive": {
          "type": "boolean",
          "example": true
        },
        "defaultDuration": {
          "type": "number",
          "example": 1500
        },
        "createdAt": {
          "type": "string",
          "example": "2025-02-07T02:53:54.124Z"
        },
        "updatedAt": {
          "type": "string",
          "example": "2025-02-07T02:53:54.124Z"
        }
      }
    }
  }
}